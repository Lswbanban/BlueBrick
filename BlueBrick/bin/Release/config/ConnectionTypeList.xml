			<ColorARGB>FFE22B8A</ColorARGB>
			<Size>1</Size>
		</ConnectionType>
		<ConnectionType name="4"> <!-- MONORAIL_SHORT_CURVE -->
			<ColorARGB>FFA899FF</ColorARGB>
			<Size>1</Size>
		</ConnectionType>
		<ConnectionType name="5"> <!-- Duplo rail -->
			<ColorARGB>FF2FFFAD</ColorARGB>
			<Size>1</Size>
		</ConnectionType>
		<ConnectionType name="flexpivot">
			<ColorARGB>FF000000</ColorARGB>
			<Size>0.5</Size>
			<HingeAngle>10</HingeAngle>
		</ConnectionType>
		<ConnectionType name="magnet">
			<ColorARGB>FFFFA746</ColorARGB>
