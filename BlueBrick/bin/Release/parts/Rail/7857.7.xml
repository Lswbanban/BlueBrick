<?xml version="1.0"?>
<part>
	<Author>FreeBee (Roland Bal)</Author>
	<Description>
		<en>Rail 12V Crossing (new type)</en>
		<fr>Rail 12V croisement (nouveau modèle)</fr>
	</Description>
	<ImageURL>http://media.peeron.com/pics/inv/custpics/x563.1083161313.jpg</ImageURL>
	
	<!-- The margin of this part in stud for snaping on the grid, relative to the bitmap -->
	<SnapMargin>
		<left>0</left>
		<right>0</right>
		<top>0</top>
		<bottom>0</bottom>
	</SnapMargin>

	<!-- list of connexion point (assuming that this part can connect to another one), the position of the connexion is in stud coord and relative to the origine defined above) -->
	<ConnexionList>
		<connexion>
			<!-- type of connexion (0=none, 1=rail, 2=road, 3=monorail standard, 4=monorail short curve) -->
			<type>1</type>
			<position>
				<x>-8</x>
				<y>0</y>
			</position>
			<angle>180</angle>
			<angleToPrev>-90.0</angleToPrev> <!-- how much angle between this connection and the prev one in this circular list -->
			<angleToNext>180.0</angleToNext> <!-- how much angle between this connection and the next one in this circular list -->			
			<nextConnexionPreference>1</nextConnexionPreference> <!-- index (0-based) in that list for connecting the next part -->
		</connexion>
		<connexion>
			<!-- type of connexion (0=none, 1=rail, 2=road, 3=monorail standard, 4=monorail short curve) -->
			<type>1</type>
			<position>
				<x>8</x>
				<y>0</y>
			</position>
			<angle>0</angle>
			<angleToPrev>180.0</angleToPrev> <!-- how much angle between this connection and the prev one in this circular list -->
			<angleToNext>90.0</angleToNext> <!-- how much angle between this connection and the next one in this circular list -->			
			<nextConnexionPreference>0</nextConnexionPreference> <!-- index (0-based) in that list for connecting the next part -->
		</connexion>
		<connexion>
			<!-- type of connexion (0=none, 1=rail, 2=road, 3=monorail standard, 4=monorail short curve) -->
			<type>1</type>
			<position>
				<x>0</x>
				<y>-8</y>
			</position>
			<angle>270</angle>
			<angleToPrev>90.0</angleToPrev> <!-- how much angle between this connection and the prev one in this circular list -->
			<angleToNext>180.0</angleToNext> <!-- how much angle between this connection and the next one in this circular list -->			
			<nextConnexionPreference>3</nextConnexionPreference> <!-- index (0-based) in that list for connecting the next part -->
		</connexion>
		<connexion>
			<!-- type of connexion (0=none, 1=rail, 2=road, 3=monorail standard, 4=monorail short curve) -->
			<type>1</type>
			<position>
				<x>0</x>
				<y>8</y>
			</position>
			<angle>90</angle>
			<angleToPrev>180.0</angleToPrev> <!-- how much angle between this connection and the prev one in this circular list -->
			<angleToNext>-90.0</angleToNext> <!-- how much angle between this connection and the next one in this circular list -->			
			<nextConnexionPreference>2</nextConnexionPreference> <!-- index (0-based) in that list for connecting the next part -->
		</connexion>
	</ConnexionList>

	<!-- a list of point that describe the hull of the parts to help finding the bounding box, when rotating the part. This is optionnal, if it doesn't exist we use the full box of the picture. -->
	<hull>
		<point>
			<x>32</x>
			<y>0</y>
		</point>
		<point>
			<x>96</x>
			<y>0</y>
		</point>
		<point>
			<x>128</x>
			<y>32</y>
		</point>
		<point>
			<x>128</x>
			<y>96</y>
		</point>
		<point>
			<x>96</x>
			<y>128</y>
		</point>
		<point>
			<x>32</x>
			<y>128</y>
		</point>
		<point>
			<x>0</x>
			<y>96</y>
		</point>
		<point>
			<x>0</x>
			<y>32</y>
		</point>
	</hull>

	<!-- Track Designer remaping data -->
	<TrackDesigner>
		<ID>417857</ID> <!-- ID of this part in Track Designer -->
		<Flag>0</Flag> <!-- 0=no flag, 1=piece is an attachment, 2=piece is used to support elevation, 3=piece is an attachment and is used to support elevation -->
		<HasSeveralGeometries>false</HasSeveralGeometries>
		<TDBitmapList>
			<TDBitmap>
				<BBConnexionPointIndex>0</BBConnexionPointIndex>
				<Type>9</Type> <!-- The type list is too long, please refer to the help file -->
				<Polarity>N</Polarity> <!-- 0=unasasigned, N=-ve, P=+ve -->
				<AngleBetweenTDandBB>0</AngleBetweenTDandBB>
			</TDBitmap>
			<TDBitmap>
				<BBConnexionPointIndex>1</BBConnexionPointIndex>
				<Type>9</Type> <!-- The type list is too long, please refer to the help file -->
				<Polarity>N</Polarity> <!-- 0=unasasigned, N=-ve, P=+ve -->
				<AngleBetweenTDandBB>0</AngleBetweenTDandBB>
			</TDBitmap>
			<TDBitmap>
				<BBConnexionPointIndex>2</BBConnexionPointIndex>
				<Type>9</Type> <!-- The type list is too long, please refer to the help file -->
				<Polarity>P</Polarity> <!-- 0=unasasigned, N=-ve, P=+ve -->
				<AngleBetweenTDandBB>0</AngleBetweenTDandBB>
			</TDBitmap>
			<TDBitmap>
				<BBConnexionPointIndex>3</BBConnexionPointIndex>
				<Type>9</Type> <!-- The type list is too long, please refer to the help file -->
				<Polarity>P</Polarity> <!-- 0=unasasigned, N=-ve, P=+ve -->
				<AngleBetweenTDandBB>0</AngleBetweenTDandBB>
			</TDBitmap>
		</TDBitmapList>
	</TrackDesigner>
</part>